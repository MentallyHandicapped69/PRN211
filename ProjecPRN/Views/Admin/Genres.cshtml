@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Genres Management";
}
@model IEnumerable<ProjecPRN.Models.Genre>
<div class="container">
    <div class="row">
        <div class="col-4">
            <h4><a asp-action="Index" asp-controller="Admin" style="color: black; text-decoration:none;">Admin Page</a> > Quản lí thể loại phim</h4>
        </div>
        <div class="col-8 d-flex justify-content-end">
            <a class="btn btn-danger rounded-pill w-25 mb-2 mt-2" asp-action="AddGenres">Thêm thể loại phim</a>
        </div>
    </div>
    <table class="table table-striped" border="2">
        <thead>
            <tr>
                <th>Thể loại phim</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Genre g in ViewBag.Genrelist)
            {
                <tr>
                    <td>@g.Description</td>
                    <td>
                        <a asp-action="EditGenres" asp-route-id="@g.GenreId">Cập nhật</a>
                        <a asp-action="DeleteGenre" asp-route-id="@g.GenreId" onclick="return confirm('Bạn có chắc bạn muốn xóa thể loại phim này ?')">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>